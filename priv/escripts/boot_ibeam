%%%-------------------------------------------------------------------

main(_Args) ->
    AppName = "ibeam",
    %% from rebar bootstrap
    Files = load_files("*","ebin"),


    case zip:create("mem",Files, [memory]) of
        {ok, {"mem", ZipBin}} ->
            Script = <<"#!/usr/bin/env escript\n%%! -noshell -noinput\n",ZipBin/binary>>,
            case file:write_file(AppName,Script) of
                ok ->
                    ok;
                {error, WriteError} ->
                    io:format("Failed to write ~s script: ~p\n",[AppName,WriteError]),
                    halt(1)
            end;
        {error, ZipError} ->
            io:format("Failed to construct ~s script archive: ~p\n",[AppName,ZipError]),
            halt(1)            
    end,

    case os:type() of
        {unix,_} ->
            [] = os:cmd("chmod u+x "++AppName),
            ok;
        _  ->
            ok
    end.


%% from rebar bootstrap
load_files(Wildcard, Dir) ->
    [read_file(Filename,Dir) || Filename <- filelib:wildcard(Wildcard,Dir)].

read_file(Filename, Dir) ->
    {ok, Bin} = file:read_file(filename:join(Dir, Filename)),
    {Filename, Bin}.
